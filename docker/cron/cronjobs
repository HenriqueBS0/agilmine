# Reiniciar os bancos MySQL e PostgreSQL a cada 1 hora
0 3 * * * docker exec $(docker ps -qf "name=mysql") bash /docker-entrypoint-initdb.d/restore-mysql.sh
0 3 * * * docker exec $(docker ps -qf "name=postgres") bash /docker-entrypoint-initdb.d/restore-postgres.sh

# Redirecionar a saÃ­da para logs (opcional)
0 3 * * * docker exec $(docker ps -qf "name=mysql") bash /docker-entrypoint-initdb.d/restore-mysql.sh >> /var/log/mysql_cron.log 2>&1
0 3 * * * docker exec $(docker ps -qf "name=postgres") bash /docker-entrypoint-initdb.d/restore-postgres.sh >> /var/log/postgres_cron.log 2>&1
